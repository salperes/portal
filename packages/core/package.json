{
  "name": "@portal/core",
  "version": "1.0.0",
  "private": true,
  "description": "MSS Portal - Core types and utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/types/index.js",
      "require": "./dist/types/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/esm/entities/index.js",
      "require": "./dist/entities/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "clean": "rimraf dist",
    "dev": "tsc --watch"
  },
  "peerDependencies": {
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "rimraf": "^6.0.0",
    "typeorm": "^0.3.20"
  }
}
